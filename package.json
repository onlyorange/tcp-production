{
  "name": "root",
  "private": true,
  "scripts": {
    "stash": "rm -rf node_modules/ packages/*/node_modules/ packages/*/yarn.lock yarn.lock",
    "clean": "yarn cleanup && yarn lerna-clean",
    "postinstall-local": "yarn flow:install",
    "clean-install": "yarn clean && yarn",
    "start": "yarn build:web",
    "start:web": "cross-env NODE_ENV=development yarn workspace @tcp/web start",
    "build:web": "yarn && cd packages/web && yarn && yarn build && yarn next-start",
    "start:mobileapp": "cd packages/mobileapp && yarn start",
    "cleanup": "rm -rf ./node_modules",
    "lerna-clean": "npx lerna clean --y",
    "test": "jest --config ./config/jest.config.js",
    "test:web": "jest --config ./config/jest.config.js",
    "test:staged": "jest --bail --findRelatedTests --config ./config/jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prettier-watch": "onchange '**/*.js' -- prettier --write {{changed}}",
    "flow": "flow",
    "flow:web": "flow",
    "flow:install": "npx lerna exec flow-typed install",
    "flow:coverage": "flow-coverage-report -i 'packages/*/src/**/*.js' -x 'packages/**/*.test.js' -t html -t json -t text -o reports/flow/ --threshold 70",
    "pretty": "prettier --write **/*.{js,json,css}",
    "eslint:web": "yarn workspace @tcp/web eslint src/ && yarn workspace @tcp/core eslint src/",
    "stylelint:web": "yarn workspace @tcp/web stylelint src/**/*.js && yarn workspace @tcp/core stylelint src/**/*.js",
    "lint:web": "yarn eslint:web && yarn stylelint:web"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@types/enzyme": "^3.9.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.4",
    "@types/react": "^16.8.19",
    "babel-cli": "^6.26.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "3.1.0",
    "eslint-detailed-reporter": "^0.7.3",
    "eslint-plugin-extra-rules": "0.0.0-development",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.3.2",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.7.0",
    "eslint-plugin-react-native-a11y": "^1.2.0",
    "eslint-plugin-sonarjs": "^0.4.0",
    "eslint-plugin-standard": "3.0.1",
    "flow-bin": "^0.82.0",
    "flow-coverage-report": "^0.6.0",
    "flow-mono-cli": "^1.5.0",
    "flow-typed": "^2.5.1",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lerna": "^3.13.4",
    "lint-staged": "^8.1.7",
    "prettier": "1.17.1",
    "stylelint": "^9.10.1",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-formatter-pretty": "^1.0.3",
    "stylelint-processor-styled-components": "^1.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "yarn flow focus-check",
      "eslint",
      "yarn test:staged",
      "stylelint"
    ],
    "*.css": "stylelint"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "react-redux": "^6.0.1",
    "react-modal": "^3.8.1",
    "react-slick": "^0.24.0",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.2",
    "styled-components": "^4.2.0"
  }
}
